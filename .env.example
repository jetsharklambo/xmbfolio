# XMBFolio Configuration Template
# Copy this file to .env and customize your values
# All values are optional - the system will use sensible defaults

# =============================================================================
# SITE INFORMATION
# =============================================================================
SITE_TITLE="Your Name"
USERNAME="yourhandle"
BIO_URL="https://yourwebsite.com"

# =============================================================================
# SOCIAL MEDIA LINKS
# =============================================================================
GITHUB_USERNAME="yourusername"
GITHUB_REPO="yourusername/yourrepo"

TWITTER_HANDLE="yourhandle"
TWITTER_URL="https://x.com/yourhandle"

FARCASTER_USERNAME="yourhandle"
FARCASTER_URL="https://farcaster.xyz/yourhandle"

# =============================================================================
# BLOG SYSTEM CONFIGURATION
# =============================================================================
ENABLE_BLOG="true"
BLOG_GITHUB_REPO="yourusername/yourrepo"
BLOG_PATH="blog"

# =============================================================================
# MENU SYSTEM CONFIGURATION
# =============================================================================
MENU_GITHUB_REPO="yourusername/yourrepo"
MENU_PATH="v4"
MENU_FILE="menu-structure.json"

# =============================================================================
# VISUAL CUSTOMIZATION
# =============================================================================

# Primary gradient colors (comma-separated hex values)
PRIMARY_COLORS="#000000,#1a3b1a,#2d5a27,#0f1f0f"

# Secondary/wireframe gradient colors
SECONDARY_COLORS="#0f1f0f,#1a3b1a,#2d5a27,#4a7c59"

# Animation settings (0.0 to 1.0)
GRADIENT_SPEED="0.3"
GRADIENT_DISTORTION="0.8"
GRADIENT_SWIRL="0.1"
GRADIENT_OPACITY="1.0"
WIREFRAME_SPEED="0.2"
WIREFRAME_OPACITY="0.4"

# =============================================================================
# DEBUG SETTINGS
# =============================================================================
DEBUG_MODE="false"
DEBUG_BOUNDARIES="true"
DEBUG_CENTER="true"
DEBUG_LOG_POSITIONS="true"

# =============================================================================
# DEPLOYMENT EXAMPLES
# =============================================================================

# For Vercel deployment, add these to your Vercel environment variables
# For Netlify, add these to your Netlify environment variables
# For GitHub Pages, you'll need to use GitHub Secrets and Actions

